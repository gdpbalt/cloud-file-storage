<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property resource="application.properties" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} | ${spring.application.name} | %5p | %marker - %-50.50logger{36} | %X{x-trace-id:-noTrace} | %m | %thread%n</pattern>
        </encoder>
    </appender>

    <root level="${connector.logging.level:-error}">
        <appender-ref ref="${connector.logging.appender:-STDOUT}" />
    </root>
</configuration>